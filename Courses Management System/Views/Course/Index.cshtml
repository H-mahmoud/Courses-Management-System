@if (User.IsInRole("Admin"))
{
    <div class="row" style="margin-top: 5%;text-align: right;">
        <div class="col-lg-12 col-md-12">
            <a href="/Course/Add" class="btn btn-info">Add Course</a>
        </div>
    </div>
}

<div class="row" style="margin-top: 2%;">
    <table class="table">
        <thead style="background-color: #343a40!important; color: white;">
            <tr>
                <th scope="col" style="width: 20%;">Name</th>
                <th scope="col" style="width: 20%;">Scheduled time</th>
                <th scope="col" style="width: 10%;">Teacher</th>
                <th scope="col" style="width: 30%;">Nom of students</th>
                <th scope="col" style="width: 20%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in ViewBag.Courses)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>@course.Time</td>
                    <td>@course.Teacher</td>
                    <td><a href="#">@course.Students Students</a></td>
                    <td style="text-align: right">
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="/Course/Delete/@course.Id" class="btn btn-danger"><span class="fa fa-remove"></span></a>
                            <a href="/Course/Update/@course.Id" class="btn btn-info"><span class="fa fa-edit"></span></a>
                        }
                        else
                        {
                            if (@course.Registered > 0)
                            {
                                <a class="btn btn-success" style="color:white">Registered</a>
                            }
                            else { 
                                <a href="/Course/Register/@course.Id" class="btn btn-info">Register</a>
                            }
                        }
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>